<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header0">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Header1">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ErrorHeader" parent="Header1">
        <item name="android:gravity">center</item>
    </style>

    <style name="Header2">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/suisse_intl_semibold</item>
    </style>

    <style name="Header3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/suisse_intl_semibold</item>
    </style>

    <style name="Info.EditText">
        <item name="android:textColorHint">@color/cool_grey</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/half_side_margin</item>
        <item name="android:paddingBottom">@dimen/half_side_margin</item>
    </style>

    <style name="Header4">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/suisse_intl_semibold</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Header5">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/suisse_intl_semibold</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Header6">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/suisse_intl_semibold</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Header7">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/suisse_intl_regular</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Chat1">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/suisse_intl_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Chat2">
        <item name="android:textColor">@color/cool_grey</item>
        <item name="android:fontFamily">@font/suisse_intl_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlatformMessage">
        <item name="android:textColor">@color/cool_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">@color/cool_grey</item>
    </style>

    <style name="FullName">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CharacterCount">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>

    <style name="EmptyText">
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:padding">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/cool_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Info">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>

    <style name="BrandCopyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallHeader">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/cool_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/suisse_intl_medium</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="OnboardingBenefitItem">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/suisse_intl_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
